<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat Belgesi Tree View -->
    <record id="view_delivery_document_tree" model="ir.ui.view">
        <field name="name">delivery.document.tree</field>
        <field name="model">delivery.document</field>
        <field name="arch" type="xml">
            <tree string="Teslimat Belgeleri" decoration-info="state=='draft'" 
                  decoration-success="state=='delivered'" decoration-warning="state=='on_route'">
                <field name="name"/>
                <field name="picking_id"/>
                <field name="partner_id"/>
                <field name="delivery_date"/>
                <field name="vehicle_type"/>
                <field name="district"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <!-- Teslimat Belgesi Form View -->
    <record id="view_delivery_document_form" model="ir.ui.view">
        <field name="name">delivery.document.form</field>
        <field name="model">delivery.document</field>
        <field name="arch" type="xml">
            <form string="Teslimat Belgesi">
                <header>
                    <button name="action_confirm" string="Onayla" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_on_route" string="Yolda" type="object" 
                            states="ready" class="btn-warning"/>
                    <button name="action_delivered" string="Tamamla" type="object" 
                            states="on_route" class="btn-success"/>
                    <button name="action_cancel" string="İptal" type="object" 
                            states="draft,ready"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,ready,on_route,delivered"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking" type="object" 
                                class="oe_stat_button" icon="fa-truck">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Transfer</span>
                                <span class="o_stat_text">Belgesi</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="picking_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="partner_phone" readonly="1"/>
                        </group>
                        <group>
                            <field name="delivery_date" required="1"/>
                            <field name="vehicle_type" required="1"/>
                            <field name="district" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Adres Bilgileri">
                        <field name="delivery_address" readonly="1"/>
                    </group>
                    
                    <group string="Rota Bilgileri">
                        <field name="route_info"/>
                        <field name="map_url" widget="url"/>
                    </group>
                    
                    <group string="SMS Durumu" states="on_route,delivered">
                        <field name="sms_sent_on_route" readonly="1"/>
                        <field name="sms_sent_delivered" readonly="1"/>
                    </group>
                    
                    <group string="Notlar">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Teslimat Belgesi Action -->
    <record id="action_delivery_document" model="ir.actions.act_window">
        <field name="name">Teslimat Belgeleri</field>
        <field name="res_model">delivery.document</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Henüz teslimat belgesi bulunmuyor!
            </p>
            <p>
                Transfer belgelerinden teslimat belgesi oluşturabilirsiniz.
            </p>
        </field>
    </record>
</odoo> 