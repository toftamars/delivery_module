<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat Planlama Form View -->
    <record id="view_delivery_planning_form" model="ir.ui.view">
        <field name="name">delivery.planning.form</field>
        <field name="model">delivery.planning</field>
        <field name="arch" type="xml">
            <form string="Teslimat Planlama">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    
                    <group string="Teslimat Günleri">
                        <field name="delivery_days_info" nolabel="1" widget="html"/>
                    </group>
                    
                    <group string="Günlük Limit">
                        <field name="daily_limit_info" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Teslimat Planlama Action -->
    <record id="action_delivery_planning" model="ir.actions.act_window">
        <field name="name">Teslimat Planlama</field>
        <field name="res_model">delivery.planning</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'readonly'}</field>
    </record>
</odoo> 