<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Teslimat Günleri Tree View -->
        <record id="view_delivery_day_tree" model="ir.ui.view">
            <field name="name">delivery.day.tree</field>
            <field name="model">delivery.day</field>
            <field name="arch" type="xml">
                <tree string="Teslimat Günleri">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="region"/>
                    <field name="districts"/>
                </tree>
            </field>
        </record>

        <!-- Teslimat Günleri Form View -->
        <record id="view_delivery_day_form" model="ir.ui.view">
            <field name="name">delivery.day.form</field>
            <field name="model">delivery.day</field>
            <field name="arch" type="xml">
                <form string="Teslimat Günü">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="region"/>
                            <field name="districts"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Teslimat Günleri Search View -->
        <record id="view_delivery_day_search" model="ir.ui.view">
            <field name="name">delivery.day.search</field>
            <field name="model">delivery.day</field>
            <field name="arch" type="xml">
                <search string="Teslimat Günleri">
                    <field name="name"/>
                    <field name="region"/>
                    <field name="districts"/>
                    <filter string="Anadolu Yakası" name="anadolu" domain="[('region', '=', 'anadolu')]"/>
                    <filter string="Avrupa Yakası" name="avrupa" domain="[('region', '=', 'avrupa')]"/>
                    <group expand="0" string="Grupla">
                        <filter string="Bölge" name="region" context="{'group_by': 'region'}"/>
                        <filter string="Gün" name="name" context="{'group_by': 'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Teslimat Günleri Action -->
        <record id="action_delivery_day" model="ir.actions.act_window">
            <field name="name">Teslimat Günleri</field>
            <field name="res_model">delivery.day</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_delivery_day_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Teslimat günü oluştur
                </p>
            </field>
        </record>

        <!-- Teslimat Günleri Menu -->
        <menuitem id="menu_delivery_day"
                  name="Teslimat Günleri"
                  action="action_delivery_day"
                  parent="menu_delivery_root"
                  sequence="20"/>
    </data>
</odoo> 