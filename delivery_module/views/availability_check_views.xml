<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <!-- Uygunluk Kontrol Tree View -->
        <record id="view_availability_check_tree" model="ir.ui.view">
            <field name="name">availability.check.tree</field>
            <field name="model">availability.check</field>
            <field name="arch" type="xml">
                <tree string="Uygunluk Kontrol">
                    <field name="vehicle_id"/>
                    <field name="district_id"/>
                    <field name="check_date"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <!-- Uygunluk Kontrol Form View -->
        <record id="view_availability_check_form" model="ir.ui.view">
            <field name="name">availability.check.form</field>
            <field name="model">availability.check</field>
            <field name="arch" type="xml">
                <form string="Uygunluk Kontrol" create="false" edit="false" options="{'no_create': True, 'no_create_edit': True, 'no_save': True, 'no_new': True}">
                    <sheet>
                        <div class="oe_title">
                            <h1>📊 Uygunluk Kontrol</h1>
                        </div>
                        
                        <group>
                            <group string="🔍 Sorgulama Kriterleri" required="1">
                                <field name="vehicle_id" 
                                       placeholder="Araç seçin..."
                                       options="{'no_create': True, 'no_create_edit': True}"
                                       required="1"/>
                                <field name="district_id" 
                                       placeholder="İlçe seçin (Küçük araçlar için gerekmez)..."
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                            <group string="📋 Bilgiler">
                                <field name="check_date" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Sonuç" attrs="{'invisible': [('result_html', '=', False)]}">
                            <field name="result_html" 
                                   readonly="1" 
                                   nolabel="1"/>
                        </group>
                    </sheet>
                    
                    <footer>
                        <button name="action_check_availability" 
                                string="🔍 Sorgula" 
                                type="object" 
                                class="btn-primary" 
                                icon="fa-search"
                                attrs="{'invisible': [('vehicle_id', '=', False)]}"/>
                        <button name="action_create_earliest"
                                string="⚡ En Erken Tarihe Oluştur" 
                                type="object" 
                                class="btn-success"
                                icon="fa-bolt"
                                attrs="{'invisible': [('result_html', '=', False)]}"/>
                        <button string="🔄 Yenile" 
                                type="object" 
                                name="action_refresh_form" 
                                class="btn-secondary" 
                                icon="fa-refresh"/>
                        <button string="❌ Kapat" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Uygunluk Kontrol Search View -->
        <record id="view_availability_check_search" model="ir.ui.view">
            <field name="name">availability.check.search</field>
            <field name="model">availability.check</field>
            <field name="arch" type="xml">
                <search string="Uygunluk Kontrol">
                    <field name="vehicle_id"/>
                    <field name="district_id"/>
                    <field name="user_id"/>
                    <filter string="Bugün" name="today" domain="[('check_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <group expand="1" string="Grupla">
                        <filter string="Araç" name="group_by_vehicle" context="{'group_by':'vehicle_id'}"/>
                        <filter string="İlçe" name="group_by_district" context="{'group_by':'district_id'}"/>
                        <filter string="Kullanıcı" name="group_by_user" context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    
</odoo> 