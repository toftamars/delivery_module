<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Müşteri Form Görünümü -->
        <record id="view_partner_form_inherit_delivery" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.delivery</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Teslimat Bilgileri" name="delivery_info">
                        <group>
                            <group>
                                <field name="district_id"/>
                                <field name="delivery_day_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="is_driver"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 