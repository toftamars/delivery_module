<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <!-- Teslimat Belgesi Tree Görünümü -->
        <record id="view_delivery_document_tree" model="ir.ui.view">
            <field name="name">delivery.document.tree</field>
            <field name="model">delivery.document</field>
            <field name="arch" type="xml">
                <tree string="Teslimat Belgeleri">
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Teslimat Belgesi Form Görünümü -->
        <record id="view_delivery_document_form" model="ir.ui.view">
            <field name="name">delivery.document.form</field>
            <field name="model">delivery.document</field>
            <field name="arch" type="xml">
                <form string="Teslimat Belgesi">
                    <header>
                        <button name="action_on_the_way" string="Yolda" type="object" 
                                class="btn-primary" groups="delivery_module.group_delivery_driver"
                                attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                        <button name="action_open_navigation" string="Haritada Aç" type="object" 
                                class="btn-info" groups="delivery_module.group_delivery_driver"
                                attrs="{'invisible': [('state', '!=', 'on_the_way')]}"/>
                        <button name="action_complete" string="Tamamla" type="object" 
                                class="btn-success" groups="delivery_module.group_delivery_driver"
                                attrs="{'invisible': [('state', '!=', 'on_the_way')]}"/>
                        <button name="action_cancel" string="İptal" type="object" 
                                class="btn-danger" attrs="{'invisible': [('state', 'in', ['cancel', 'done'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,ready,on_the_way,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="partner_id"/>
                                <field name="vehicle_id"/>
                            </group>
                            <group>
                                <field name="photo_count" readonly="1"/>
                                <button name="action_view_photos" type="object" string="Fotoğrafları Gör" attrs="{'invisible': [('photo_count', '=', 0)]}"/>
                                <field name="delivery_address"/>
                                <field name="phone" widget="phone"/>
                                <field name="manual_task" placeholder="Manuel teslimat için yapılacak iş açıklaması..."/>
                                <field name="note" placeholder="Teslimat hakkında ek notlar..."/>
                                <button name="action_open_navigation" type="object" string="Navigasyon" class="btn-secondary" 
                                        groups="delivery_module.group_delivery_driver"
                                        attrs="{'invisible': [('state', '!=', 'on_the_way')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Teslimat Belgesi Search Görünümü -->
        <record id="view_delivery_document_search" model="ir.ui.view">
            <field name="name">delivery.document.search</field>
            <field name="model">delivery.document</field>
            <field name="arch" type="xml">
                <search string="Teslimat Belgeleri">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="vehicle_id"/>
                    <filter string="Taslak" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Hazır" name="ready" domain="[('state', '=', 'ready')]"/>
                    <filter string="Yolda" name="on_the_way" domain="[('state', '=', 'on_the_way')]"/>
                    <filter string="Teslim Edildi" name="done" domain="[('state', '=', 'done')]"/>
                    <group expand="0" string="Grupla">
                        <filter string="Durum" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Müşteri" name="partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Araç" name="vehicle" context="{'group_by': 'vehicle_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    
    </data>
</odoo> 