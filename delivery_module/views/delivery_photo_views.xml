<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Tree View -->
        <record id="view_delivery_photo_tree" model="ir.ui.view">
            <field name="name">delivery.photo.tree</field>
            <field name="model">delivery.photo</field>
            <field name="arch" type="xml">
                <tree string="Teslimat Fotoğrafları">
                    <field name="name"/>
                    <field name="delivery_document_id"/>
                    <field name="delivery_day_id"/>
                    <field name="delivery_vehicle_id"/>
                    <field name="partner_id"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_delivery_photo_form" model="ir.ui.view">
            <field name="name">delivery.photo.form</field>
            <field name="model">delivery.photo</field>
            <field name="arch" type="xml">
                <form string="Teslimat Fotoğrafı">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="delivery_document_id"/>
                                <field name="delivery_day_id"/>
                                <field name="delivery_vehicle_id"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                        <group>
                            <field name="photo" widget="image" class="oe_avatar"/>
                            <field name="photo_filename" invisible="1"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Fotoğraf hakkında açıklama..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_delivery_photo_search" model="ir.ui.view">
            <field name="name">delivery.photo.search</field>
            <field name="model">delivery.photo</field>
            <field name="arch" type="xml">
                <search string="Teslimat Fotoğrafı Ara">
                    <field name="name"/>
                    <field name="delivery_document_id"/>
                    <field name="delivery_day_id"/>
                    <field name="delivery_vehicle_id"/>
                    <field name="partner_id"/>
                    <field name="create_uid"/>
                    <filter string="Bugün" name="today" domain="[('create_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <filter string="Bu Hafta" name="this_week" domain="[('create_date', '&gt;=', datetime.datetime.combine(context_today() - datetime.timedelta(days=context_today().weekday()), datetime.time(0,0,0)))]"/>
                    <group expand="0" string="Grupla">
                        <filter string="Teslimat Belgesi" name="group_delivery_document" context="{'group_by': 'delivery_document_id'}"/>
                        <filter string="Teslimat Günü" name="group_delivery_day" context="{'group_by': 'delivery_day_id'}"/>
                        <filter string="Teslimat Aracı" name="group_delivery_vehicle" context="{'group_by': 'delivery_vehicle_id'}"/>
                        <filter string="Müşteri" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Oluşturan" name="group_create_uid" context="{'group_by': 'create_uid'}"/>
                        <filter string="Tarih" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_delivery_photo" model="ir.actions.act_window">
            <field name="name">Teslimat Fotoğrafları</field>
            <field name="res_model">delivery.photo</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Henüz teslimat fotoğrafı eklenmemiş
                </p>
                <p>
                    Teslimat fotoğrafları burada görüntülenir.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_delivery_photo"
                  name="Teslimat Fotoğrafları"
                  parent="menu_delivery_root"
                  action="action_delivery_photo"
                  sequence="50"/>
</odoo>
