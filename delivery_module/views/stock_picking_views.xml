<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Stok Transfer Form Görünümü -->
        <record id="view_picking_form_inherit_delivery" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.delivery</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Teslimatlar" name="deliveries">
                        <field name="delivery_count" widget="statinfo" string="Teslimatlar"/>
                        <field name="delivery_ids" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="delivery_date"/>
                                <field name="vehicle_id"/>
                                <field name="driver_id"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="district_id"/>
                    <field name="delivery_day"/>
                </xpath>
            </field>
        </record>

        <!-- Stok Transfer Ağaç Görünümü -->
        <record id="view_picking_tree_inherit_delivery" model="ir.ui.view">
            <field name="name">stock.picking.tree.inherit.delivery</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="delivery_count" widget="statinfo" string="Teslimatlar"/>
                </field>
            </field>
        </record>
    </data>
</odoo> 