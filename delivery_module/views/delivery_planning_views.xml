<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Teslimat Planlaması Form Görünümü -->
        <record id="view_delivery_planning_form" model="ir.ui.view">
            <field name="name">delivery.planning.form</field>
            <field name="model">delivery.planning</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Onayla" type="object" 
                                class="oe_highlight" states="draft"/>
                        <button name="action_start" string="Başlat" type="object" 
                                class="oe_highlight" states="confirmed"/>
                        <button name="action_done" string="Tamamla" type="object" 
                                class="oe_highlight" states="in_progress"/>
                        <button name="action_cancel" string="İptal Et" type="object" 
                                states="draft,confirmed,in_progress"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,confirmed,in_progress,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Planlama Adı"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="vehicle_id"/>
                            </group>
                            <group>
                                <field name="driver_id"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Teslimatlar">
                                <field name="delivery_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="picking_id"/>
                                        <field name="partner_id"/>
                                        <field name="delivery_date"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notlar">
                                <field name="notes"/>
                            </page>
                            <page string="Rota">
                                <field name="route_map"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Teslimat Planlaması Ağaç Görünümü -->
        <record id="view_delivery_planning_tree" model="ir.ui.view">
            <field name="name">delivery.planning.tree</field>
            <field name="model">delivery.planning</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="vehicle_id"/>
                    <field name="driver_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Teslimat Planlaması Arama Görünümü -->
        <record id="view_delivery_planning_search" model="ir.ui.view">
            <field name="name">delivery.planning.search</field>
            <field name="model">delivery.planning</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="driver_id"/>
                    <filter string="Aktif" name="active" domain="[('active','=',True)]"/>
                    <filter string="Taslak" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Onaylandı" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Devam Ediyor" name="in_progress" domain="[('state','=','in_progress')]"/>
                    <filter string="Tamamlandı" name="done" domain="[('state','=','done')]"/>
                    <group expand="0" string="Grupla">
                        <filter string="Durum" name="state" context="{'group_by':'state'}"/>
                        <filter string="Tarih" name="date" context="{'group_by':'date'}"/>
                        <filter string="Araç" name="vehicle" context="{'group_by':'vehicle_id'}"/>
                        <filter string="Sürücü" name="driver" context="{'group_by':'driver_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Teslimat Planlaması Aksiyon -->
        <record id="action_delivery_planning" model="ir.actions.act_window">
            <field name="name">Teslimat Planlamaları</field>
            <field name="res_model">delivery.planning</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_delivery_planning_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Yeni bir teslimat planlaması oluşturun
                </p>
            </field>
        </record>
    </data>
</odoo> 