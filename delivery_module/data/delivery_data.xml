        </record>

        <record id="delivery_vehicle_kucuk_arac_2" model="delivery.vehicle">
            <field name="name">Küçük Araç 2</field>
            <field name="vehicle_type">kucuk_arac_2</field>
            <field name="daily_limit">7</field>
        </record>

        <record id="delivery_vehicle_ek_arac" model="delivery.vehicle">
            <field name="name">Ek Araç</field>
            <field name="vehicle_type">ek_arac</field>
            <field name="daily_limit">7</field>
        </record>
    </data>
</odoo> 