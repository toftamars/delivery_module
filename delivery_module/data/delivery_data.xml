<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Teslimat Belgesi Sıra Numarası -->
        <record id="seq_delivery_document" model="ir.sequence">
            <field name="name">Teslimat Belgesi</field>
            <field name="code">delivery.document</field>
            <field name="prefix">TES/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Teslimat Planlaması Sıra Numarası -->
        <record id="seq_delivery_planning" model="ir.sequence">
            <field name="name">Teslimat Planlaması</field>
            <field name="code">delivery.planning</field>
            <field name="prefix">PLAN/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Teslimat Günleri -->
        <record id="delivery_day_monday" model="delivery.day">
            <field name="name">Pazartesi</field>
            <field name="code">monday</field>
        </record>

        <record id="delivery_day_tuesday" model="delivery.day">
            <field name="name">Salı</field>
            <field name="code">tuesday</field>
        </record>

        <record id="delivery_day_wednesday" model="delivery.day">
            <field name="name">Çarşamba</field>
            <field name="code">wednesday</field>
        </record>

        <record id="delivery_day_thursday" model="delivery.day">
            <field name="name">Perşembe</field>
            <field name="code">thursday</field>
        </record>

        <record id="delivery_day_friday" model="delivery.day">
            <field name="name">Cuma</field>
            <field name="code">friday</field>
        </record>

        <record id="delivery_day_saturday" model="delivery.day">
            <field name="name">Cumartesi</field>
            <field name="code">saturday</field>
        </record>

        <record id="delivery_day_sunday" model="delivery.day">
            <field name="name">Pazar</field>
            <field name="code">sunday</field>
        </record>

        <!-- Örnek Şehirler -->
        <record id="city_istanbul" model="res.city">
            <field name="name">İstanbul</field>
        </record>

        <record id="city_ankara" model="res.city">
            <field name="name">Ankara</field>
        </record>

        <!-- Örnek İlçeler -->
        <record id="district_kadikoy" model="res.city.district">
            <field name="name">Kadıköy</field>
            <field name="city_id" ref="city_istanbul"/>
            <field name="delivery_days" eval="[(6, 0, [
                ref('delivery_day_monday'),
                ref('delivery_day_wednesday'),
                ref('delivery_day_friday')
            ])]"/>
        </record>

        <record id="district_besiktas" model="res.city.district">
            <field name="name">Beşiktaş</field>
            <field name="city_id" ref="city_istanbul"/>
            <field name="delivery_days" eval="[(6, 0, [
                ref('delivery_day_tuesday'),
                ref('delivery_day_thursday'),
                ref('delivery_day_saturday')
            ])]"/>
        </record>

        <record id="district_cankaya" model="res.city.district">
            <field name="name">Çankaya</field>
            <field name="city_id" ref="city_ankara"/>
            <field name="delivery_days" eval="[(6, 0, [
                ref('delivery_day_monday'),
                ref('delivery_day_wednesday'),
                ref('delivery_day_friday')
            ])]"/>
        </record>
    </data>
</odoo> 