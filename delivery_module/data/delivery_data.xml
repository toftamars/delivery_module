<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Örnek İller -->
        <record id="city_istanbul" model="res.city">
            <field name="name">İstanbul</field>
            <field name="state_id" ref="base.state_tr_34"/>
            <field name="active">True</field>
        </record>

        <record id="city_ankara" model="res.city">
            <field name="name">Ankara</field>
            <field name="state_id" ref="base.state_tr_06"/>
            <field name="active">True</field>
        </record>

        <record id="city_izmir" model="res.city">
            <field name="name">İzmir</field>
            <field name="state_id" ref="base.state_tr_35"/>
            <field name="active">True</field>
        </record>

        <!-- İstanbul İlçeleri -->
        <record id="district_kadikoy" model="res.city.district">
            <field name="name">Kadıköy</field>
            <field name="city_id" ref="city_istanbul"/>
            <field name="active">True</field>
        </record>

        <record id="district_besiktas" model="res.city.district">
            <field name="name">Beşiktaş</field>
            <field name="city_id" ref="city_istanbul"/>
            <field name="active">True</field>
        </record>

        <record id="district_sisli" model="res.city.district">
            <field name="name">Şişli</field>
            <field name="city_id" ref="city_istanbul"/>
            <field name="active">True</field>
        </record>

        <record id="district_uskudar" model="res.city.district">
            <field name="name">Üsküdar</field>
            <field name="city_id" ref="city_istanbul"/>
            <field name="active">True</field>
        </record>

        <record id="district_fatih" model="res.city.district">
            <field name="name">Fatih</field>
            <field name="city_id" ref="city_istanbul"/>
            <field name="active">True</field>
        </record>

        <!-- Ankara İlçeleri -->
        <record id="district_cankaya" model="res.city.district">
            <field name="name">Çankaya</field>
            <field name="city_id" ref="city_ankara"/>
            <field name="active">True</field>
        </record>

        <record id="district_kecioren" model="res.city.district">
            <field name="name">Keçiören</field>
            <field name="city_id" ref="city_ankara"/>
            <field name="active">True</field>
        </record>

        <record id="district_mamak" model="res.city.district">
            <field name="name">Mamak</field>
            <field name="city_id" ref="city_ankara"/>
            <field name="active">True</field>
        </record>

        <!-- İzmir İlçeleri -->
        <record id="district_konak" model="res.city.district">
            <field name="name">Konak</field>
            <field name="city_id" ref="city_izmir"/>
            <field name="active">True</field>
        </record>

        <record id="district_bornova" model="res.city.district">
            <field name="name">Bornova</field>
            <field name="city_id" ref="city_izmir"/>
            <field name="active">True</field>
        </record>

        <record id="district_karsiyaka" model="res.city.district">
            <field name="name">Karşıyaka</field>
            <field name="city_id" ref="city_izmir"/>
            <field name="active">True</field>
        </record>

        <!-- Teslimat Günleri -->
        <record id="delivery_day_monday" model="delivery.day">
            <field name="name">Pazartesi</field>
            <field name="day_of_week">0</field>
            <field name="sequence">10</field>
            <field name="active">True</field>
        </record>

        <record id="delivery_day_tuesday" model="delivery.day">
            <field name="name">Salı</field>
            <field name="day_of_week">1</field>
            <field name="sequence">20</field>
            <field name="active">True</field>
        </record>

        <record id="delivery_day_wednesday" model="delivery.day">
            <field name="name">Çarşamba</field>
            <field name="day_of_week">2</field>
            <field name="sequence">30</field>
            <field name="active">True</field>
        </record>

        <record id="delivery_day_thursday" model="delivery.day">
            <field name="name">Perşembe</field>
            <field name="day_of_week">3</field>
            <field name="sequence">40</field>
            <field name="active">True</field>
        </record>

        <record id="delivery_day_friday" model="delivery.day">
            <field name="name">Cuma</field>
            <field name="day_of_week">4</field>
            <field name="sequence">50</field>
            <field name="active">True</field>
        </record>

        <record id="delivery_day_saturday" model="delivery.day">
            <field name="name">Cumartesi</field>
            <field name="day_of_week">5</field>
            <field name="sequence">60</field>
            <field name="active">True</field>
        </record>

        <record id="delivery_day_sunday" model="delivery.day">
            <field name="name">Pazar</field>
            <field name="day_of_week">6</field>
            <field name="sequence">70</field>
            <field name="active">False</field>
        </record>

        <!-- Teslimat Araçları -->
        <record id="delivery_vehicle_anadolu" model="delivery.vehicle">
            <field name="name">Anadolu Yakası</field>
            <field name="vehicle_type">anadolu</field>
            <field name="daily_limit">7</field>
        </record>

        <record id="delivery_vehicle_avrupa" model="delivery.vehicle">
            <field name="name">Avrupa Yakası</field>
