<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Teslimat Yöneticisi Kuralları -->
        <record id="delivery_document_manager_rule" model="ir.rule">
            <field name="name">Teslimat Belgeleri: Yönetici Erişimi</field>
            <field name="model_id" ref="model_delivery_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_delivery_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Teslimat Kullanıcısı Kuralları -->
        <record id="delivery_document_user_rule" model="ir.rule">
            <field name="name">Teslimat Belgeleri: Kullanıcı Erişimi</field>
            <field name="model_id" ref="model_delivery_document"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_delivery_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo> 