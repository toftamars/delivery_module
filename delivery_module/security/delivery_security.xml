<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Teslimat Belgesi Güvenlik Kuralları -->
        <record id="delivery_document_comp_rule" model="ir.rule">
            <field name="name">Teslimat Belgesi Şirket Kuralı</field>
            <field name="model_id" ref="model_delivery_document"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <!-- Teslimat Planlaması Güvenlik Kuralları -->
        <record id="delivery_planning_comp_rule" model="ir.rule">
            <field name="name">Teslimat Planlaması Şirket Kuralı</field>
            <field name="model_id" ref="model_delivery_planning"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>
    </data>
</odoo> 