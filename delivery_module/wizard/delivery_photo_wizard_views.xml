<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <!-- Form View -->
        <record id="view_delivery_photo_wizard_form" model="ir.ui.view">
            <field name="name">delivery.photo.wizard.form</field>
            <field name="model">delivery.photo.wizard</field>
            <field name="arch" type="xml">
                <form string="Fotoğraf Ekle">
                    <sheet>
                        <group>
                            <group>
                                <field name="delivery_document_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="photo_filename" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="photo" widget="image" class="oe_avatar"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Fotoğraf hakkında açıklama..."/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_create_photo" string="Fotoğraf Ekle" type="object" class="btn-primary"/>
                        <button string="İptal" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_delivery_photo_wizard" model="ir.actions.act_window">
            <field name="name">Fotoğraf Ekle</field>
            <field name="res_model">delivery.photo.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
    
    </data>
</odoo>
