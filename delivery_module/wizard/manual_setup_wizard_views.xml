<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_manual_setup_wizard_form" model="ir.ui.view">
            <field name="name">manual.setup.wizard.form</field>
            <field name="model">manual.setup.wizard</field>
            <field name="arch" type="xml">
                <form string="Manuel Kurulum">
                    <sheet>
                        <group>
                            <p>Bu wizard ile teslimat programını manuel olarak ayarlayabilirsiniz.</p>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_setup_delivery_schedule" string="Teslimat Programını Ayarla" type="object" class="btn-primary"/>
                        <button name="action_create_vehicles" string="Araçları Oluştur" type="object" class="btn-secondary"/>
                        <button name="action_check_data" string="Verileri Kontrol Et" type="object" class="btn-secondary"/>
                        <button string="İptal" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_manual_setup_wizard" model="ir.actions.act_window">
            <field name="name">Manuel Kurulum</field>
            <field name="res_model">manual.setup.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_manual_setup"
                  name="Manuel Kurulum"
                  parent="menu_delivery_root"
                  action="action_manual_setup_wizard"
                  sequence="100"/>
    </data>
</odoo>
