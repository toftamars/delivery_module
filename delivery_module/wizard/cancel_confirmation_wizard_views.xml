<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_cancel_confirmation_wizard_form" model="ir.ui.view">
            <field name="name">cancel.confirmation.wizard.form</field>
            <field name="model">cancel.confirmation.wizard</field>
            <field name="arch" type="xml">
                <form string="İptal Onayı">
                    <sheet>
                        <group>
                            <field name="delivery_document_id" readonly="1"/>
                            <field name="reason" placeholder="İptal sebebini açıklayın..."/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm_cancel" string="İptal Et" type="object" class="btn-danger"/>
                        <button string="Vazgeç" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_cancel_confirmation_wizard" model="ir.actions.act_window">
            <field name="name">İptal Onayı</field>
            <field name="res_model">cancel.confirmation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>
