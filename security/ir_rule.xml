<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Teslimat Belgesi Kuralı -->
        <record id="tofta_rule_delivery_document" model="ir.rule">
            <field name="name">Teslimat Belgesi Kuralı</field>
            <field name="model_id" ref="model_delivery_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('tofta_group_delivery_manager'))]"/>
        </record>

        <!-- Teslimat Günü Kuralı -->
        <record id="tofta_rule_delivery_day" model="ir.rule">
            <field name="name">Teslimat Günü Kuralı</field>
            <field name="model_id" ref="model_delivery_day"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('tofta_group_delivery_manager'))]"/>
        </record>

        <!-- İlçe Kuralı - Tüm kullanıcılar ilçeleri görebilir -->
        <record id="tofta_rule_res_city_district" model="ir.rule">
            <field name="name">İlçe Kuralı</field>
            <field name="model_id" ref="model_res_city_district"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo> 